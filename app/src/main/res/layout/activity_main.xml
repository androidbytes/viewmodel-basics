<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/counter_label"
            android:text="Counter"
            android:fontFamily="@font/life_savers_bold"
            android:textSize="24sp"
            android:textColor="@color/text"/>

    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/count"
            app:layout_constraintEnd_toEndOf="@+id/counter_label"
            app:layout_constraintStart_toStartOf="@+id/counter_label"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/counter_label"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:textSize="36sp"
            android:fontFamily="@font/life_savers_bold"/>

    <Button
            android:text="Tap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tap_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>